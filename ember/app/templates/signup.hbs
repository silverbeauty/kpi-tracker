<div class="d-flex h-100">
  <div class="m-auto">
    <form>
      <div class="form-group {{if model.errors.email 'has-error'}}">
        <label for="exampleInputEmail1">Email</label>
        {{input value=model.email type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"}}

        {{#if model.errors.email}}
          <div class="text-danger">
            {{model.errors.email.firstObject.message}}
          </div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        {{input value=model.password type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"}}
      </div>
      <button type="submit" class="btn btn-primary" {{action 'signup'}}>Sign up</button>
      or {{#link-to "signup"}}Log in{{/link-to}}

    </form>
  </div>
</div>
