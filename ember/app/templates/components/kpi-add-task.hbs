{{yield}}
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Activity</span>
                </div>
                <select type="text" class="form-control" >
                    <option value="">Select</option>
                    {{#each categories as |activity|}}
                        <option value="{{activity.id}}">{{activity.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="col-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Datetime completed</span>
                </div>
                <input type="date" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >How many emails were sent?</span>
                </div>
                <input type="date" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Explain what did you do?</span>
                </div>
                <textarea type="text" class="form-control"></textarea>
            </div>
        </div>
    </div>
</div>